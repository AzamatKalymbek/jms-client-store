{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": "./src",
    "paths": {
      "@env/*": [
        "environments/environment/*"
      ],
      "@pages/*": [
        "app/@pages/*"
      ],
      "@core/*": [
        "app/main/core/*"
      ],
      "@shared/*": [
        "app/main/shared/*"
      ],
      "@feature/*": [
        "app/main/features/*"
      ]
    }
  }
}
